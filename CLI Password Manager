import getpass

FILENAME = "credentials.txt"

def add_credentials():
    site = input("Enter website: ")
    username = input("Enter username: ")
    password = getpass.getpass("Enter password: ")

    with open(FILENAME, "a") as file:
        file.write(f"{site},{username},{password}\n")
    print("âœ… Credentials saved.")

def get_credentials():
    site = input("Enter website to retrieve: ")
    found = False

    with open(FILENAME, "r") as file:
        for line in file:
            s, u, p = line.strip().split(",")
            if s == site:
                print(f"ğŸ”‘ Username: {u}\nğŸ” Password: {p}")
                found = True
                break

    if not found:
        print("âŒ Site not found.")

if __name__ == "__main__":
    choice = input("Type 'add' to store or 'get' to retrieve: ").lower()
    if choice == "add":
        add_credentials()
    elif choice == "get":
        get_credentials()
    else:
        print("â“ Invalid choice.")
